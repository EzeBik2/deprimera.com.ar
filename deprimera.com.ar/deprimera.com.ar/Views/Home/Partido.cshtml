<head>
    <link href="~/Content/Equipo.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Personal.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <img alt="Fondo" id="full-screen-background-image" src="~/Images/Fondo.jpg" />
    <header>
        <section>
            <div class="TOP">
                <a href="@Url.Action("IrAIndex", "Home", ViewBag.jugadorqueselogueo, null)"> <img class="Logo" src="~/Images/Logo.png" /></a>
                <div class="MenuPersonal">
                    <div class="Barra">
                        <div class="A NombreUsuario">NOMBRE DE USUARIO</div>
                        <a data-toggle="modal" data-target="#exampleModal"><img class="Iconos" src="~/Images/Perfil.png" style="height: 40px; width: 30px;" /></a>
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content" style="width: 800px;">
                                    <div class="modal-header">
                                        <h2 class="modal-title" id="exampleModalLabel" style="text-align: center; font-size: 30px;">INGRESE</h2>
                                    </div>
                                    <div class="modal-body" style="height: 600px;">
                                        <!--PREFIL JUGADOR-->
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Send message</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <script>
                            $('#exampleModal').on('show.bs.modal', function (event) {
                                var button = $(event.relatedTarget)
                            })
                        </script>
                        <a href="@Url.Action("UltimasNotificaciones", "Home", ViewBag.jugadorqueselogueo, null)"><img class="Iconos" src="~/Images/Notificaciones.png" style="height: 40px; width: 40px;" /></a>
                        <a href="@Url.Action("IrALanding", "Home")"><img class="Iconos" src="~/Images/salir.png" style="height: 40px; width: 40px;" /></a>
                    </div>
                    <div class="Triangulo"></div>
                </div>
            </div>
        </section>
        <section>
            <div class="MenuPrincipal">
                <ul>
                    <li><a class="A" href="@Url.Action("IrAIndex", "Home", ViewBag.jugadorqueselogueo, null)">INICIO</a></li>
                    <li><a class="A" href="@Url.Action("IrAPartido", "Home", ViewBag.jugadorqueselogueo, null)">PARTIDO</a></li>
                    <li><a class="A" href="@Url.Action("IrAEquipo", "Home", ViewBag.jugadorqueselogueo, null)">EQUIPO</a></li>
                    <li><a class="A" href="@Url.Action("IrABuscar", "Home", ViewBag.jugadorqueselogueo, null)">BUSCAR</a></li>
                    <li><a class="A" href="@Url.Action("IrAChat", "Home", ViewBag.jugadorqueselogueo, null)">CHAT</a></li>
                </ul>
            </div>
        </section>
    </header>
    <main>
        <section style="width: 50%; height: 500px; float: left;">
            <div class="Crear">
                <a href="@Url.Action("CrearPartido", "Partido", ViewBag.jugadorqueselogueo, null)">
                    <div class="Texto" style="width: 40%;">
                        <h2>ARMA TU PARTIDO</h2>
                        <p>Organiza un partido, invita a tus amigos, completa las vacantes con desconocidos.</p>
                    </div>
                    <img class="Messi" src="~/Images/Kane.png" style="width: 55%;" />
                </a>
            </div>
        </section>
        <section style="width: 40%; height: 500px; float: left;">
            <a href="@Url.Action("IrAPartidosConVacantes", "Partido", ViewBag.jugadorqueselogueo, null)" class="Mis">
                <h2 class="TITULO">PARTIDOS CON VACANTES</h2>
                <img class="Ibrahimovic" src="~/Images/Puyol.png" />
            </a>
            <a href="@Url.Action("MisPartidos", "Partido", ViewBag.jugadorqueselogueo, null)" class="ConVacantes">
                <h2 class="TITULO">MIS PARTIDOS</h2>
                <img class="Cech" src="~/Images/Rooney.png" />
            </a>
        </section>
    </main>
</body>